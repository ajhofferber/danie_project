<div class="accountWrap login sectionWrap halfGutter">
  <div class="grid flexGrid gridJustify">
    <div id="CustomerLoginForm" class="oneThird flexItem forceCenter formWrap">
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
      <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}
        <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
        <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        <input type="submit" class="button" value="{{ 'customer.reset_password.submit' | t }}">
      {% endform %}
    </div>
  </div>
</div>